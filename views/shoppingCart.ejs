<!DOCTYPE html>
<html>
    <head>
        <title>papapapapapa</title>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans+TC" rel="stylesheet">
        <link href="/stylesheets/menu.css" rel="stylesheet"/>  
        <link href="/stylesheets/main.css" rel="stylesheet"/>    
        <style>
            div.item {
                border: 2px solid #000;
                width: 1050px;
                height: 200px;
                margin:10px auto;
                padding: 25px;
                box-sizing: border-box;
            }

            div.item img{
                float:left;
                margin-right: 20px;
            }

            div.item h1{
                margin-top: 0;
            }
        </style>
    </head>

    <body>
        <div class = "container">
            <%- include('public/header'); -%>

            <%- include('public/navbar'); -%>

            <div class = "content">
                <h1>我的購物車</h1>
                <div style="background: var(--main-color); border: var(--darker-color) solid 5px ; padding: 5%;box-sizing: border-box;">
                    <% for(var i=0; i<items.length; i++) {%>
                        <a href="/product/<%= items[i].prono %>"> 
                            <div class = "section" style="margin: 0 auto;">
                                <img src = "/<%= items[i].picture %>" height="100%">
                                <div class = "right">
                                    <span>商品名稱: <%= items[i].proname %></span>
                                    <br/>
                                    <span>售價: <%= items[i].price %>$</span>
                                    <br/>
                                    <span>商品介紹: <%= items[i].description %></span>
                                    <br/>
                                    <span>上架日期: <%= items[i].date %></span>
                                </div>
                            </div>
                        </a>
                    <% } %>
                </div>
                <div style="float: right">
                    <h1 style="float: left;margin-top: 1em;">總共<%= sum %>$</h1>
                    <!-- <form action = "/shoppingCart/remove" method = "post"> -->
                        <div class="value" style="margin-left: 1em;margin-top: 1em;float: right;"><input class="button" type="submit" value="確認"></div>
                    <!-- </form> -->
                </div>
            </div>

            <%- include('public/footer'); -%>
        </div>
    </body>

    <script src = "http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
</html>
