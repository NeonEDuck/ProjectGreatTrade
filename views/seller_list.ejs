<!DOCTYPE html>
<html>
    <head>
        <title>= title %></title>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans+TC" rel="stylesheet">
        <link href="/stylesheets/menu.css" rel="stylesheet"/>  
        <link href="/stylesheets/main.css" rel="stylesheet"/>    
    </head>

    <body>
        <div class = "container">
            <div class = "header">           
            </div>

            <div class = "navbar">
            </div>

            <div class = "content">
                <h2>賣家清單 </h2>

                <table>
                    <thead>
                        <tr>
                            <th width="20%">訂單編號</th>
                            <th width="15%">買家名稱</th>
                            <th width="15%">產品名稱</th>
                            <th width="10%">價錢</th>
                            <th width="10%">付費方式</th> 
                            <th width="10%">日期</th>                       
                        </tr>
                    </thead>
                    <tbody>
                         for(var i=0; i<items.length; i++) {%>
                            <tr>
                                <td><a href="/product/one/= items[i].prono %>">= items[i].prono %></a></td>
                                <td>= items[i].memname %></td>
                                <td>= items[i].proname %></td>
                                <td>= items[i].price %></td>
                                <td>= items[i].payname %></td>
                                <td>= items[i].orddate %></td>                        
                            </tr> 
                         } %> 
                    </tbody>
                </table>   
            </div>

            <div class = "footer">
            </div>
        </div>
    </body>

    <script src = "http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script src = "/js/public_div.js"></script>
</html>
